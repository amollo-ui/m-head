{
    "compilerOptions": {
        "rootDir": "./lib",
        "outDir": "dist",
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "lib/**/*.test.tsx",
        "lib/**/*.test.ts",
        "lib/**/*.spec.tsx",
        "lib/**/*.spec.ts",
        "**/__tests__/*"
    ],
    "include": [
        "lib/**/*.ts",
        "lib/**/*.tsx",
        "typings/**/*.d.ts"
    ]
}